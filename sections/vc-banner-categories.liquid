<div class="banner-categories flex flex-row relative justify-center" style="top:-30px;width:100%">
  <div style="width:100%;max-width:1330px" class="flex gap-4 px-8 flex-row">
    {%- for block in section.blocks -%}
      {%- liquid
        assign img_image = block.settings.col_image
        assign card_collection = block.settings.collection
      -%}
      {%- if img_image -%}
        <div style="flex:1;width:100%" class="flex flex-col">
          <div role="button" style="width:100%" class="relative cursor-pointer">
            <div style="width:100%;aspect-ratio:0.8333333333333334">
              <a href="{{ card_collection.url }}">
                {%- if img_image != blank -%}
                  {%- capture sizes -%}
                  (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                  (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                {%- endcapture -%}
                  {{
                    img_image
                    | image_url: width: 750
                    | image_tag: sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
                  }}
                {%- endif -%}
              </a>
            </div>
          </div>
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>

