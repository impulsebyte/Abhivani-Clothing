<div class="banner-section flex flex-row justify-center" style="width:100%">
  <div style="width:100%;max-width:" class="flex pt-3 px-3 flex-col">
    <div role="button" style="width:100%" class="relative cursor-pointer">
      <a href="/collections/all/">
        <div class="desktop-show" style="width:100%;aspect-ratio:5">
          <img
            alt="Republic Day Sale Main Banner"
            class=""
            loading="eager"
            style="width:100%;aspect-ratio:5"
            srcSet="https://cdn.shopify.com/s/files/1/0632/2526/6422/files/Web-GIF1.gif?v=1737011196"
          >
        </div>
        <div class="mobile-show" style="width: 100%; aspect-ratio: 2.06897 / 1;">
          <img
            alt="Republic Day Sale Main Banner"
            class=""
            loading="eager"
            style="width: 100%; aspect-ratio: 2.06897 / 1;"
            srcSet="https://cdn.shopify.com/s/files/1/0632/2526/6422/files/Header-GIF3_ea868cd5-0337-4b74-b85f-6beb598c1f6b.gif"
          >
        </div>
      </a>
    </div>
  </div>
</div>

